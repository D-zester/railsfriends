
<% if user_signed_in? %>
  <table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th> Remove user</th>
      </tr>
    </thead>

    <tbody>
      <% @dosts.each do |dost| %>
        <% if dost.user == current_user %>
        <tr>
          <td><%= link_to dost.first_name + ' ' + dost.ladt_name, dost %></td> 
          <td><%= dost.email %></td>
          <td><%= dost.phone %></td>
          <td><%= dost.twitter %></td>
          <td><%= link_to 'Delete', dost, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Dost', new_dost_path, class:"btn btn-secondary" %>
<% else %>
  <h1>Hello world</h1>
  <p>This is my first ruby page</p>
<% end %>