<div class="card">
  <div class="card-header">
    <%= form_with(model: dost) do |form| %>
        <% if dost.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(dost.errors.count, "error") %> prohibited this dost from being saved:</h2>
            <ul>
              <% dost.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>    
  </div>
  <div class="card-body">
    <div class="field form-group">
      <%= form.text_field :first_name, class:"form-control", placeholder:"First Name" %>
    </div>
    <br/>
    <div class="field">

      <%= form.text_field :ladt_name, class:"form-control", placeholder:"Last Name" %>
    </div>
    <br/>
    <div class="field">
      <%= form.text_field :email, class:"form-control", placeholder:"Email" %>
    </div>
    <br/>
    <div class="field">
      <%= form.text_field :phone, class:"form-control", placeholder:"Phone" %>
    </div>
    <br/>
    <div class="field">
      <%= form.text_field :twitter, class:"form-control", placeholder:"Twitter" %>
    </div>
    <br/>
    <div class="field">
      <%= form.number_field :user_id, id: :dosts_user_id, class:"form-control", value: current_user.id, type: :hidden %>
    </div>
  </div>
</div>
<br/>
<div class="actions">
  <%= form.submit class:"btn btn-secondary"%>
  <br/>
<% end %>
